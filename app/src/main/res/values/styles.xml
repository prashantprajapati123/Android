<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/medium_teal</item>
        <item name="colorButtonNormal">@color/white</item>
        <item name="colorControlNormal">@color/primary_teal</item>
        <item name="colorControlActivated">@color/light_teal</item>
        <item name="colorControlHighlight">@color/light_teal</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:editTextStyle">@style/EditText</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItem</item>
    </style>

    <!-- Activity themes -->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <!-- Widget themes -->

    <!-- Buttons -->

    <style name="ColoredButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/teal_button_background</item>

    </style>

    <style name="ColoredButtonWithPadding" parent="ColoredButton">
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
    </style>

   <style name="Button" parent="Widget.AppCompat.Button">
       <item name="android:textColor">@color/medium_teal</item>
       <item name="android:textAllCaps">false</item>
       <item name="android:background">@drawable/white_button_background</item>

   </style>

    <style name="TextButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:background">@drawable/clickable_white</item>
    </style>

    <!-- TextViews etc. -->

    <style name="TealLabel" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/primary_teal</item>
    </style>

    <style name="LargeTealLabel" parent="TealLabel">
        <item name="android:textSize">34sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="Label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>

        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="SmallLabel" parent="Label">
        <item name="android:textSize">@dimen/metrics_12sp</item>
    </style>

    <style name="BigLabel"  parent="TextAppearance.AppCompat.Large">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="LightLabel" parent="Label">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TabText" parent="TextAppearance.AppCompat.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="DarkLabel" parent="Label">
        <item name="android:textColor">@color/dark_grey</item>


    </style>

    <style name="BigDarkLabel"  parent="TextAppearance.AppCompat.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ProgressLabel" >
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="QuestionLabel" parent="SmallLabel">
        <item name="android:gravity">left</item>
    </style>

    <!-- EditTexts -->

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/light_grey</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/metrics_14sp</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="EditTextMedium" parent="EditText">
        <item name="android:textSize">@dimen/metrics_15sp</item>
    </style>
    <style name="LoginUsernameEditText" parent="EditTextMedium">
        <item name="android:inputType">textNoSuggestions</item>


    </style>

    <style name="LoginEmailEditText" parent="EditTextMedium">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="LoginPasswordEditText" parent="EditTextMedium">
        <item name="android:inputType">textPassword</item>
        <item name="android:textColorHint">@color/light_grey</item>
        <item name="android:fontFamily">sans-serif</item>

    </style>

    <style name="FormEditText" parent="EditTextMedium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="FormStateEditText" parent="FormEditText">
        <item name="android:inputType">textCapCharacters</item>
        <item name="android:maxLength">2</item>
    </style>

    <style name="FormSSNEditText" parent="FormEditText">
        <item name="android:inputType">numberPassword</item>
    </style>

    <style name="FormDateEditText" parent="FormEditText">
        <item name="android:inputType">date</item>
        <item name="android:focusable">false</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="FormNumberEditText" parent="FormEditText">
        <item name="android:inputType">number</item>
    </style>

    <style name="FormZipEditText" parent="FormNumberEditText">
        <item name="android:maxLength">5</item>
    </style>

    <style name="FormPhotoEditText" parent="FormEditText">
        <item name="android:focusable">false</item>
        <item name="android:drawableRight">@android:drawable/ic_menu_camera</item>
    </style>

    <!-- Spinners -->

    <style name="FormSpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/dropdownListPreferredItemHeight</item>
    </style>

    <style name="SpinnerItem" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">@color/dark_grey</item>
    </style>


</resources>
